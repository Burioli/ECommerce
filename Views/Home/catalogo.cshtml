<!-- Form per i dati della carta di credito -->
<div id="paymentForm" class="form-fields">
  <form onsubmit="return false;">
    <p>Il prezzo è di 25 euro.</p>
    <input type="text" placeholder="Numero carta di credito" required><br>
    <input type="text" placeholder="Nome sulle carta" required><br>
    <button onclick="pay()">Paga</button>
  </form>
</div>

<!-- Messaggio di pagamento effettuato -->
<div id="paymentConfirmation" style="display: none;">
  <p>Pagamento effettuato</p>
</div>

<script>
  function showForm(imageName) {
    var formId = 'personalInfoForm_' + imageName;
    var form = document.getElementById(formId);

    // Nascondi tutti i form prima di mostrare quello corretto
    var formContainers = document.querySelectorAll('.form-fields');
    formContainers.forEach(function(container) {
      container.classList.remove('visible');
    });

    // Mostra il form corretto
    form.classList.add('visible');
    document.getElementById('paymentForm').classList.remove('visible');
    document.getElementById('paymentConfirmation').style.display = 'none';
  }

  function confirmPurchase() {
    document.querySelectorAll('.form-fields.visible').forEach(function(container) {
      container.classList.remove('visible');
    });
    document.getElementById('paymentForm').classList.add('visible');
    document.getElementById('paymentConfirmation').style.display = 'none';
  }

  function pay() {
    // Simula un pagamento (puoi aggiungere qui la tua logica per il pagamento)
    // In questo esempio, mostriamo solo un messaggio di conferma
    document.getElementById('paymentConfirmation').style.display = 'block';
  }
</script>

